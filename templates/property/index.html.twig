{% extends 'base.html.twig' %}

{% block title %}Tous nos biens{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.typeSort) }}</div>
            <div class="col-md-4">{{ form_row(form.minSurface) }}</div>
            <div class="col-md-4">{{ form_row(form.maxPrice) }}</div>
        </div>
        <div class="row">    
            <div class="col-md-4">{{ form_row(form.selectCity) }}</div>
            <div class="col-md-4">{{ form_row(form.selectPostalcode) }}</div>
            <div class="col-md-4">{{ form_row(form.selectTypeHeat) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3">{{ form_row(form.minRooms) }}</div>
            <div class="col-md-3">{{ form_row(form.minBedrooms) }}</div>
            <div class="col-md-3">{{ form_row(form.maxFloor) }}</div>
            <div class="col-md-3">{{ form_row(form.options) }}</div>
        </div>
        <button class="btn btn-primary">{{ button|default('Rechercher') }}</button>
    {{ form_end(form) }}
    </div>
</div>
 <div class="container mt-4">
    <h1>Voir tous nos biens</h1>
        <div class="row">
        {% for property in properties %}
            <div class="col-md-4">
                {% include "property/_property.html.twig" %}
            </div>
        {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
</div>
{% endblock %}
